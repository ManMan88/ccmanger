{
  "name": "@claude-manager/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:down": "tsx src/db/migrate.ts --down"
  },
  "dependencies": {
    "@claude-manager/shared": "workspace:*",
    "@fastify/cors": "^9.0.1",
    "@fastify/websocket": "^10.0.1",
    "better-sqlite3": "^11.7.0",
    "fastify": "^4.28.1",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "simple-git": "^3.27.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.16.5",
    "@types/ws": "^8.18.1",
    "eslint": "^9.32.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4",
    "ws": "^8.19.0"
  }
}
